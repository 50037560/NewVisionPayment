@page "/address"
@using NewVisionPayment.Models;


<MudContainer Class="mt-4" MaxWidth="MaxWidth.Medium">
    <MudGrid Spacing="6" Class="mt-4">
        <MudItem xs="7">
            <MudGrid>
                <MudList Clickable="true" Dense="true">
                    <MudListItem Text="@displayCustomer.Id" />
                    <MudDivider />
                    <MudListItem Text="@displayCustomer.firstName" />
                    <MudListItem Text="@displayCustomer.lastName" />
                    <MudListItem Text="@displayCustomer.addressLine1" />
                    <MudListItem Text="@displayCustomer.addressLine2" />
                    <MudListItem Text="@displayCustomer.city" />
                    <MudListItem Text="@displayCustomer.postcode" />
                </MudList>
            </MudGrid>
        </MudItem>
    </MudGrid>
</MudContainer>


@code
{
    // This is the id we will carry over from our beginning screen and passed through via the
    [Parameter]
    public NewVisionCustomer displayCustomer { get; set; } = new NewVisionCustomer();

}